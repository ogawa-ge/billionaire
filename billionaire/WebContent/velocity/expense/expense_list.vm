<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    ##<!-- BootstrapのCSS読み込み -->
		<link type="text/css" href="${link.contextURL}/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet">
	    ##<!-- jQuery読み込み -->
	    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	    ##<!-- BootstrapのJS読み込み -->
	    <script src="${link.contextURL}/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
		<title>Billionaire - $!esc.html($date) の出費リスト</title>
	</head>
	<body>
		<div class="jumbotron">
			<div class="container">
				<h1>Billionaire</h1>
				<p>$!esc.html($date) の出費リスト</p>
				<p align="right"><a class="btn btn-primary btn-lg" href="${link.contextURL}/logout" role="button">ログアウト</a></p>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-sm-5">
					#if(!$!lock)
						<div class="btn-group btn-group-justified" role="group">
							<a class="btn btn-success" href="${link.contextURL}/expense/register" role="button">新しく出費を登録する</a>
						</div>
					#else
						<div class="btn-group btn-group-justified" role="group">
							<a class="btn btn-default" role="button">登録済みのため不可</a>
						</div>
					#end
				</div>
				<div class="col-sm-offset-1 col-sm-6">
					#parse("expense/daily_budget_panel.vm")
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="table-responsive">
						<table class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>カテゴリ</th>
									<th>出費名</th>
									<th>備考</th>
									<th>出費額</th>
									<th colspan="2">編集・削除</th>
								</tr>
							</thead>
							<tbody>
								#foreach($expense in $!expenseList.expenseList)
								<tr>
									<td>$esc.html($expense.expenseCategory.label)</td>
									<td>$esc.html($expense.expenseName.value)</td>
									<td>$esc.html($expense.expenseMemo.value)</td>
									<td>$esc.html($expense.expenseAmount.value) 円</td>
									#if(!$!lock)
										<td>
											<form name="modify_${expense.expenseId.value}" method="post" action="${link.contextURL}/expense/modify">
												<input type="hidden" name="expenseId" value="${expense.expenseId.value}">
												<a class="btn btn-primary center-block" href="javascript:void(0)" onclick="document.modify_${expense.expenseId.value}.submit();return false;">変更</a>
											</form>
										</td>
										<td>
											<form name="delete_${expense.expenseId.value}" method="post" action="${link.contextURL}/expense/delete">
												<input type="hidden" name="expenseId" value="${expense.expenseId.value}">
												<a class="btn btn-danger center-block" href="javascript:void(0)" onclick="document.delete_${expense.expenseId.value}.submit();return false;">削除</a>
											</form>
										</td>
									#else
										<td colspan="2">
												<a class="btn btn-default center-block">登録済みのため変更不可</a>
										</td>
									#end
								</tr>
								#end
							</tbody>
							<tfoot>
								<tr>
									<th colspan="3"><h4 align="right">出費合計</h4></th>
									<td><h4>$!esc.html($!expenseTotal) 円</h4></td>
									<td colspan="2"></td>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-offset-3 col-sm-6">
					<div class="btn-group btn-group-justified" role="group">
						<a class="btn btn-primary" href="${link.contextURL}/top" role="button">TOP画面へ</a>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
